<% provide(:title, 'Sign up Tourney') %>
<h1><center>Tournament</center></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@tournament) do |f| %>
      <%= render 'shared/error_messages', :object => @tournament %>
      
      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>

      <%= f.label :venue, "Venue" %>
      <%= f.text_field :venue %>

      <%= f.label :date_from, "From" %>
      <%= f.text_field :date_from, 'data-behaviour' => 'datepicker' %>

      <%= f.label :date_to, "To" %>
      <%= f.text_field :date_to, 'data-behaviour' => 'datepicker' %>

      <%= f.label :description  %>
      <%= f.text_area :description, size: "30x5" %>

      <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({"format": "dd M, yyyy", "autoclose": true});
</script>